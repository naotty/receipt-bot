{
  "name": "receipt-bot",
  "version": "1.0.0",
  "description": "Receipt processing bot that extracts amount from emails and records to Google Sheets",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "npm run build && cdk deploy --require-approval never",
    "bootstrap": "cdk bootstrap",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev:up": "docker-compose up -d && sleep 10",
    "dev:down": "docker-compose down",
    "dev:upload": "ts-node local-dev/upload-sample-email.ts",
    "dev:local": "ts-node local-dev/local-dev.ts",
    "dev:full": "npm run dev:up && npm run dev:upload && npm run dev:local"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.815.0",
    "@aws-sdk/client-s3": "^3.815.0",
    "@aws-sdk/client-secrets-manager": "^3.816.0",
    "dotenv": "^16.5.0",
    "googleapis": "^133.0.0",
    "mailparser": "^3.6.4",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.14",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.4.2",
    "aws-cdk": "^2.133.0",
    "aws-cdk-lib": "^2.133.0",
    "constructs": "^10.3.0",
    "esbuild": "^0.25.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}